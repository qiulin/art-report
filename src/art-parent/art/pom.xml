	<build>
		<finalName>${project.artifactId}</finalName>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.4</version>
					<configuration>
						<webResources>
							<!-- include java source files in generated art.war -->
							<resource>
								<directory>${basedir}/src/main/java</directory>
								<targetPath>WEB-INF/classes</targetPath>
								<includes>
									<include>**/*.java</include>
								</includes>
							</resource>
						</webResources>
					</configuration>
				</plugin>

				<!-- plugin to update/add license headers to source files -->
				<plugin>
					<groupId>com.mycila.maven-license-plugin</groupId>
					<artifactId>maven-license-plugin</artifactId>
					<version>1.10.b1</version>
					<configuration>
						<basedir>${basedir}</basedir>
						<header>${basedir}/src/license/header.txt</header>
						<includes>
							<include>src/main/java/**/*.java</include>
						</includes>
						<excludes>
							<exclude>src/main/java/**/BCrypt.java</exclude>
						</excludes>
						<encoding>UTF-8</encoding>
						<strictCheck>true</strictCheck>
						<dryRun>false</dryRun>
						<failIfMissing>true</failIfMissing>
					</configuration>
				</plugin>
				
			</plugins>
		</pluginManagement>

		<plugins>
			<!-- uncomment and use maven-license-plugin as required e.g. mvn license:check, 
			license:format, license:remove -->

			<!-- <plugin> <groupId>com.mycila.maven-license-plugin</groupId> <artifactId>maven-license-plugin</artifactId> 
			</plugin> -->
		</plugins>
	</build>

